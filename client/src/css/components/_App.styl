body
  overflow hidden
  background-image linear-gradient(to top, #a8edea 0%, #fed6e3 100%)
  height 100vh

#App
  text-align left
  height 100vh

button
  background-color transparent
  border-color transparent
  margin-bottom 10px

main
  display grid
  grid-template-columns 1fr 2fr
  grid-template-rows 1.6rem auto
  grid-gap 40px
  padding 20px
  height 100%

.grid-header
  grid-column 2
  text-align right
  font-size 4.2rem
  color #e60276
  margin 15px

.view-box
  overflow-y scroll

.ingredient-list
  display flex
  flex-direction column

.ingredient
  flex 1
  display flex
  justify-content space-between

.steps-list
  display flex
  flex-direction column

.step
  flex 1
  display flex
  justify-content space-between

.remove
  padding 0 15px

.remove--step
  align-self center

.flex-header
  display flex
  justify-content flex-start