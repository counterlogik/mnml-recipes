#App
  position relative
  margin 0 auto
  max-width 1366px

button
  background-color transparent
  border 0.25rem dashed #14b6cc
  padding 0.5rem 1rem
  font-size 1.5rem
  font-weight 700
  outline none

.btn--icon
  padding 0 0 0.25rem
  border-width 0.125rem
  border-radius 0.25rem
  line-height 0
  width 1rem
  height 1rem

.btn--small
  font-size 1.25rem
  border 0.125rem dashed #14b6cc
  padding 0.25rem 0.75rem

.btn--link
  border 0
  color #e60276

.btn--edit
  border-color #14cc1a
  color #0f8413
  margin-right 1rem

.btn--auth
  width 48%

.btn--top-nav
  background-color #14b6cc
  color #f8fbde

.btn--delete
  border-color #ff0039
  color #ad0027

.btn--circular
  border-radius 2rem
  font-size 2rem
  font-weight 700

.btn--modal
  color #14b6cc

.btn--add
  border 0

.btn--nav
  border 0

.btn--edit
  border 0

.btn--delete
  border 0

.btn-group--modal
  display flex
  justify-content space-around

.btn-group--auth
  display flex
  justify-content space-between

main
  position relative
  display flex
  padding 1rem
  height calc(100vh - 10rem)

.recipe-list
  display flex
  flex-direction column

.recipe-list-grid
  display grid
  grid-template-columns 1fr 1fr
  grid-template-rows min-content
  grid-gap 0.5rem 1rem
  padding 1rem
  max-height calc(100vh - 26rem)
  overflow-y scroll

.recipe-list-grid::-webkit-scrollbar
  width 0.25rem

.recipe-list-grid::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 0.25rem rgba(34, 34, 34, 0.25)

.recipe-list-grid::-webkit-scrollbar-thumb
  background-color #222222
  outline 0.125rem solid #222222

.page-header
  text-align right
  font-size 2.5rem
  font-weight 700
  color #e60276
  margin-bottom 0
  height 4rem
  padding 1rem
  display flex
  justify-content flex-end
  align-items center

.recipe-title-input
  text-align right
  font-size 1.5rem
  font-weight 700
  color #e60276
  margin-bottom 0
  width 60%

.edit-field
  margin-right 1rem
  width 100%
  margin-bottom 1rem

.ingredients-list
  display flex
  flex-direction column
  margin-bottom 1rem

.ingredient
  flex 1
  display flex
  justify-content flex-start
  align-items center
  line-height 1.25
  margin-right 0.5rem

.steps-list
  display flex
  flex-direction column
  margin-bottom 1rem

.step
  flex 1
  display flex
  justify-content flex-start
  align-items center
  line-height 1.25
  margin-right 0.5rem

.flex-header
  display flex
  justify-content flex-end
  padding 1rem

.top-navigation
  position absolute
  top 0
  left 1rem

.bottom-navigation
  display flex
  justify-content space-between
  padding-left 1rem
  padding-right 1rem

.recipe-actions
  display flex
  justify-content space-around

.dashboard-actions
  display flex
  justify-content flex-end
  padding 1rem

.header--unauthenticated
  padding 2rem

.view-box
  overflow auto
  height calc(100vh - 11rem)

.view-box--steps
  min-width 20rem
  margin-right 2rem
  flex 0 1 50%

.view-box--ingredients
  flex 0 1 100%

.view-box::-webkit-scrollbar
  width 0.25rem

.view-box::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 0.25rem rgba(34, 34, 34, 0.25)

.view-box::-webkit-scrollbar-thumb
  background-color #222222
  outline 0.125rem solid #222222

.modal
  background rgba(34, 34, 34, 0.95)
  display inline-block
  padding 1.5rem
  top 50%
  transform translatey(-50%)
  left calc(50vw - 256px)
  width 512px
  min-height 192px
  max-height calc(90vh)
  position fixed
  z-index 100
  overflow-x hidden
  overflow-y auto
  -webkit-overflow-scrolling touch

.modal-header
  color #f8fbde
  margin-bottom 2rem

.container--home
  max-width 368px
  margin 0 auto

.header--home
  color #0f8413

.form--auth
  max-width 368px
  margin 0 auto

.details-chooser
  display none

@media only screen and (max-width: 767px)
  .details-chooser
    display block
    display flex
    justify-content center

  .btn--details-chooser
    background-color rgba(34, 34, 34, 0.2)
    color rgba(248, 251, 222, 1)
    border 0
    font-weight 400
    width 10.75rem
    height 2rem

  .btn--details-chooser--is-active
    background-color rgba(34, 34, 34, 1)

  .form--auth
    padding 30vh 1rem

  .container--home
    text-align right

  .modal
    min-height 96px
    width 100%
    top 67%
    left 0

  main
    flex-wrap wrap
    height calc(100vh - 10rem)

  .recipe-title-input
    font-size 1rem
    width calc(100vw - 8rem)

  .edit-field
    font-size 1rem

  .header--main
    font-size 1rem
    font-weight 700

  .page-header
    height 3rem
    font-size 1.25rem
    padding 2.5rem 1rem 0

  .view-box
    calc(100vh - 10rem)

  .view-box--steps
    display none

  .view-box--ingredients
    display none

  .view-box--is-active
    display block
    width 100%

  button
    border 0.125rem dashed #14b6cc
    padding 0.25rem 0.5rem
    font-size 1rem
