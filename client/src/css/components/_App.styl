#app
  font-family 'dank mono', 'avenir', helvetica, arial, sans-serif
  font-size 1rem
  text-align left
  margin 0 auto
  padding 2rem
  max-width 1366px
  height 100vh

button
  background-color transparent
  border 0.25rem dashed #14b6cc
  padding 0.5rem 1rem
  font-size 1.5rem
  font-weight 700
  outline none

.btn--icon
  padding 0 0 0.25rem
  border-width 0.125rem
  border-radius 0.25rem
  line-height 0
  width 1rem
  height 1rem

.btn--small
  font-size 1.25rem
  border 0.125rem dashed #14b6cc
  padding 0.25rem 0.75rem

.btn--link
  border 0
  color #e60276

.btn--edit
  border-color #14cc1a
  color #0f8413

.btn--delete
  border-color #ff0039
  color #ad0027

.btn--circular
  border-radius 2rem
  font-size 2rem
  font-weight 700

main
  display grid
  grid-template-columns 1fr 2fr
  grid-template-rows min-content auto min-content
  grid-gap 1rem 2rem
  padding 1rem
  height calc(100vh - 6rem)

.recipe-list
  display flex
  flex-direction column

.recipe-list-grid
  display grid
  grid-template-columns 1fr 1fr
  grid-template-rows min-content
  grid-gap 0.5rem 1rem
  padding 1rem
  max-height calc(100vh - 26rem)
  overflow-y scroll

.recipe-list-grid::-webkit-scrollbar
  width 0.25rem

.recipe-list-grid::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 0.25rem rgba(34, 34, 34, 0.25)

.recipe-list-grid::-webkit-scrollbar-thumb
  background-color #222222
  outline 0.125rem solid #222222

.grid-header
  grid-column 2
  text-align right
  font-size 2.5rem
  font-weight 700
  color #e60276
  margin-bottom 0

.recipe-title-input
  grid-column 2
  text-align right
  font-size 2.5rem
  font-weight 700
  color #e60276
  margin-bottom 0

.edit-field
  margin-right 1rem
  width 100%
  margin-bottom 1rem

.ingredients-list
  display flex
  flex-direction column
  margin-bottom 1rem

.ingredient
  flex 1
  display flex
  justify-content flex-start
  align-items center
  line-height 1.25
  margin-right 0.5rem

.steps-list
  display flex
  flex-direction column
  margin-bottom 1rem

.step
  flex 1
  display flex
  justify-content flex-start
  align-items center
  line-height 1.25
  margin-right 0.5rem

.flex-header
  display flex
  justify-content flex-start
  padding 1rem

.user-navigation
  display flex
  justify-content flex-end
  align-items center
  padding 1rem
  height 6rem

.recipe-actions
  display flex
  justify-content space-around

.dashboard-actions
  display flex
  justify-content flex-end
  padding 1rem

.header--unauthenticated
  padding 2rem

.view-box
  overflow-y scroll

.view-box::-webkit-scrollbar
  width 0.25rem

.view-box::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 0.25rem rgba(34, 34, 34, 0.25)

.view-box::-webkit-scrollbar-thumb
  background-color #222222
  outline 0.125rem solid #222222
