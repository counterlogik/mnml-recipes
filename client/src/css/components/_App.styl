#app
  font-family 'dank mono', 'avenir', helvetica, arial, sans-serif
  font-size 1rem
  text-align left
  margin 0 auto
  padding 2rem
  max-width 1366px
  height 100vh

button
  background-color transparent
  border 0.25rem dashed #14b6cc
  padding 0.5rem 1rem
  font-size 1.5rem
  font-weight 700
  margin-bottom 10px

.btn--icon
  padding 0.125rem 0.125rem 0.25rem
  border-width 0.125rem
  border-radius 0.25rem
  line-height 0.5

.btn--small
  font-size 1.25rem
  border 0.125rem dashed #14b6cc
  padding 0.25rem 0.75rem

.btn--link
  border 0
  color #e60276

.btn--edit
  border-color #14cc1a
  color #0f8413

.btn--delete
  border-color #ff0039
  color #ad0027

.btn--circular
  border-radius 2rem
  font-size 2rem
  font-weight 700

main
  display grid
  grid-template-columns 1fr 2fr
  grid-template-rows 6rem auto
  grid-gap 3rem
  padding 1rem
  height 100%

.grid-header
  grid-column 2
  text-align right
  font-size 4rem
  color #e60276
  margin 1rem

.edit-field
  margin-right 1rem

.ingredients-list
  display flex
  flex-direction column
  margin-bottom 2rem

.ingredient
  flex 1
  display flex
  justify-content flex-start

.steps-list
  display flex
  flex-direction column
  margin-bottom 2rem

.step
  flex 1
  display flex
  justify-content flex-start

.flex-header
  display flex
  justify-content flex-start

.recipe-title-input
  height 6rem
  font-size 4rem
  font-weight 700
  text-align right

.user-navigation
  display flex
  justify-content flex-end
  align-items center
  padding 1rem

.recipe-actions
  display flex
  justify-content space-around

.recipe-list
  padding 1rem

.dashboard-actions
  display flex
  justify-content flex-end

.grid-empty-cell
  opacity 0
